<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ProgressBar
        android:id="@+id/cursorImage"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/progress_background"
        android:indeterminate="false"
        android:max="30"
        android:progress="0"
        android:progressDrawable="@drawable/progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/firstTarget"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/target_first"
        android:indeterminate="false"
        android:max="30"
        android:progress="0"
        android:progressDrawable="@drawable/progress"
        android:backgroundTint="#44FF8A"
        android:progressTint="#4FD04F"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/secondTarget"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/progress_background"
        android:indeterminate="false"
        android:max="30"
        android:progress="0"
        android:progressDrawable="@drawable/target_second"
        android:backgroundTint="#FF448A"
        android:progressTint="#F03F3F"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
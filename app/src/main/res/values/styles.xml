<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="autoCompleteTextViewStyle">@style/SearchView</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="OverlayCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/overlayMenuBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="OverlayButtonsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingTop">@dimen/margin_vertical_small</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="OverlayButton">
        <item name="android:layout_width">@dimen/overlay_menu_btn_size</item>
        <item name="android:layout_height">@dimen/overlay_menu_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/overlayMenuButtons</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="feedbackIcon">
        <item name="android:layout_width">@dimen/feedback_icon_size</item>
        <item name="android:layout_height">@dimen/feedback_icon_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="targetItem">
        <item name="android:layout_width">@dimen/target_item_size</item>
        <item name="android:layout_height">@dimen/target_item_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/red_ko</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="PermissionItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/margin_vertical_small</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_small</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_default</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogTitleIcon">
        <item name="android:layout_width">@dimen/item_height</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_large</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/textTitle</item>
    </style>

    <style name="DialogTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textSize">@dimen/text_size_dialog_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>